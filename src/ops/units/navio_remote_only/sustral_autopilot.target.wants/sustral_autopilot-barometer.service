[Unit]
Description=Sustral Autopilot Hardware Barometer
PartOf=sustral_autopilot.target
Requires=sustral_autopilot.target sustral_autopilot-message_bus.service
After=sustral_autopilot.target sustral_autopilot-message_bus.service
[Service]
Type=simple
Restart=always
ExecStart=/usr/bin/python3 /usr/bin/sustral_autopilot/launcher-barometer.py
StandardOutput=journal
StandardError=journal
[Install]
WantedBy=sustral_autopilot.target